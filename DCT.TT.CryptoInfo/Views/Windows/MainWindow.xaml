<Window x:Class="DCT.TT.CryptoInfo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:fa="http://schemas.fontawesome.com/icons/"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:DCT.TT.CryptoInfo.ViewModels"
        xmlns:local="clr-namespace:DCT.TT.CryptoInfo"
        xmlns:system="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        DataContext="{vm:MainWindowViewModel}"
        Title="{Binding Title}" 
        Height="450" Width="800">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="Open">
                <MenuItem Header="Exit" Command="{Binding CloseApplicationCommand}"/>
            </MenuItem>
            <MenuItem Header="About">
                <MenuItem Header="test"/>
            </MenuItem>
        </Menu>
        <StatusBar DockPanel.Dock="Bottom">
            <StatusBarItem>
                <TextBlock Text="test"></TextBlock>
            </StatusBarItem>
        </StatusBar>
        <TabControl>
            <TabItem Header="Cтуденты">
                <TextBlock Text="{x:Static system:Environment.CurrentDirectory}"></TextBlock>
            </TabItem>
            <TabItem Header="вкладка 2">

            </TabItem>
            <TabItem Header="вкладка 2" Margin="-2,-2,-2,0"/>
        </TabControl>
    </DockPanel>
</Window>
