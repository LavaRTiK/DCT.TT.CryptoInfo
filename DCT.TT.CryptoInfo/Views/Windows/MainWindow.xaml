<Window x:Class="DCT.TT.CryptoInfo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:fa="http://schemas.fontawesome.com/icons/"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:DCT.TT.CryptoInfo.ViewModels"
        xmlns:local="clr-namespace:DCT.TT.CryptoInfo"
        xmlns:system="clr-namespace:System;assembly=mscorlib"
        xmlns:rs="clr-namespace:DCT.TT.CryptoInfo.Properties"
        mc:Ignorable="d"
        DataContext="{Binding MainWindowModel,Source={StaticResource Locator}}"
        Title="{Binding Title}"
    Height="450" Width="800">
    <DockPanel>
        <DockPanel.Background>
            <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                <GradientStop Color="#2d2d30" Offset="0" />
                <GradientStop Color="#252526" Offset="1" />
            </LinearGradientBrush>
        </DockPanel.Background>
        <StatusBar DockPanel.Dock="Bottom"  Background="Transparent" FontSize="12" Foreground="#9ca3af">
            <StatusBarItem>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                    <Ellipse Width="30" Height="30" Stroke="Black" StrokeThickness="2" Fill="Yellow"></Ellipse>
                    <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center">Offline</TextBlock>
                </StackPanel>
            </StatusBarItem>
        </StatusBar>
        <Grid DockPanel.Dock="Top">
            <Grid.RowDefinitions>
                <RowDefinition Height="21*"/>
                <RowDefinition Height="185*"/>
            </Grid.RowDefinitions>
            <StackPanel  Orientation="Horizontal" Margin="10,0,0,5" HorizontalAlignment="Left" VerticalAlignment="Bottom" Height="23" Width="368" Grid.Row="0">
                <Button Background="Transparent" BorderBrush="Transparent" Padding="10,0,10,0" FontSize="16" FontWeight="Medium" Foreground="White" Content="{x:Static rs:Resources.MainWindow_Review_btn}"></Button>
                <Button Background="Transparent" BorderBrush="Transparent" Padding="10,0,10,0" FontSize="16" FontWeight="Medium" Foreground="White">Портфолио</Button>
                <Button Background="Transparent" BorderBrush="Transparent" Padding="10,0,10,0" FontSize="16" FontWeight="Medium" Foreground="White">Новости</Button>
                <Button Background="Transparent" BorderBrush="Transparent" Padding="10,0,10,0" FontSize="16" FontWeight="Medium" Foreground="White">Настройки</Button>
            </StackPanel>
            <Separator Grid.Row="1" VerticalAlignment="Top" Margin="10,0,10,0" Height="1"/>
            <Frame Grid.Row="1" Content="{Binding PageSource}"  NavigationUIVisibility="Hidden" Margin="0,5,0,0"/>
        </Grid>
        <!--сделать команду для смена страницы и придумать как передавать даные -->
        <!--<Frame Content="{Binding PageSource}"  NavigationUIVisibility="Hidden"/>-->
    </DockPanel>
</Window>
