<Page x:Class="DCT.TT.CryptoInfo.Views.Page.SettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DCT.TT.CryptoInfo.Views.Page"
      xmlns:fa5="http://schemas.fontawesome.com/icons/"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SettingsPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="121*"/>
            <ColumnDefinition Width="158*"/>
            <ColumnDefinition Width="121*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="157*"/>
            <RowDefinition Height="161*"/>
            <RowDefinition Height="132*"/>
        </Grid.RowDefinitions>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                <GradientStop Color="#2d2d30" Offset="0" />
                <GradientStop Color="#252526" Offset="1" />
            </LinearGradientBrush>
        </Grid.Background>
        <Button Grid.Column="0" HorizontalAlignment="Left" VerticalAlignment="Center" Background="Transparent" Margin="20,0,0,0" Height="20" Width="53" Command="{Binding ChangePageBack}">
            <StackPanel Orientation="Horizontal">
                <fa5:ImageAwesome Icon="Solid_ArrowLeft" Width="16" Height="16" Foreground="White" />
                <TextBlock Text="Назад"  Foreground="White"/>
            </StackPanel>
        </Button>
        <StackPanel Grid.Row="1" Grid.Column="0">
        <TextBlock Text="Select Localization" Foreground="White" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,20,0,0"></TextBlock>
        <ComboBox SelectedIndex="0" Margin="15,20" Padding="0,5,0,5">
                <ComboBoxItem Content="Ukr"/>
                <ComboBoxItem Content="Eng"/>
            </ComboBox>
        </StackPanel>
    </Grid>
</Page>
