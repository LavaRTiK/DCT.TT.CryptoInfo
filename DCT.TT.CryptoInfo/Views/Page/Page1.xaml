<Page x:Class="DCT.TT.CryptoInfo.Views.Page.Page1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:fa="http://schemas.fontawesome.com/icons/"
      xmlns:local="clr-namespace:DCT.TT.CryptoInfo.Views.Page"
      xmlns:oxy="http://oxyplot.org/wpf"
      xmlns:convertes="clr-namespace:DCT.TT.CryptoInfo.Infrastructure.Convertes"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      DataContext="{Binding Page1Model ,Source={StaticResource Locator}}"
      Title="Page1">
    <Page.Resources>
        <convertes:PercentBrushConvector x:Key="PercentBrushConvector"/>
        <convertes:NumberToShort x:Key="NumberToShort"/>
        <SolidColorBrush x:Key="TextBox.Static.Border" Color="#FFABAdB3"/>
        <SolidColorBrush x:Key="TextBox.MouseOver.Border" Color="#FF7EB4EA"/>
        <SolidColorBrush x:Key="TextBox.Focus.Border" Color="#FF569DE5"/>
        <Style x:Key="TextBoxStyleSearch" TargetType="{x:Type TextBox}">
            <Setter Property="Background" Value="{DynamicResource {x:Static SystemColors.WindowBrushKey}}"/>
            <Setter Property="BorderBrush" Value="{StaticResource TextBox.Static.Border}"/>
            <Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="KeyboardNavigation.TabNavigation" Value="None"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
            <Setter Property="AllowDrop" Value="true"/>
            <Setter Property="ScrollViewer.PanningMode" Value="VerticalFirst"/>
            <Setter Property="Stylus.IsFlicksEnabled" Value="False"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type TextBox}">
                        <Border x:Name="border" CornerRadius="7" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" SnapsToDevicePixels="True">
                            <ScrollViewer x:Name="PART_ContentHost" Focusable="false" HorizontalScrollBarVisibility="Hidden" VerticalScrollBarVisibility="Hidden"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsEnabled" Value="false">
                                <Setter Property="Opacity" TargetName="border" Value="0.56"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="true">
                                <Setter Property="BorderBrush" TargetName="border" Value="{StaticResource TextBox.MouseOver.Border}"/>
                            </Trigger>
                            <Trigger Property="IsKeyboardFocused" Value="true">
                                <Setter Property="BorderBrush" TargetName="border" Value="{StaticResource TextBox.Focus.Border}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <MultiTrigger>
                    <MultiTrigger.Conditions>
                        <Condition Property="IsInactiveSelectionHighlightEnabled" Value="true"/>
                        <Condition Property="IsSelectionActive" Value="false"/>
                    </MultiTrigger.Conditions>
                    <Setter Property="SelectionBrush" Value="{DynamicResource {x:Static SystemColors.InactiveSelectionHighlightBrushKey}}"/>
                </MultiTrigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="DefualtText" TargetType="{x:Type TextBlock}">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Medium"></Setter>
        </Style>
    </Page.Resources>
    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                <GradientStop Color="#2d2d30" Offset="0" />
                <GradientStop Color="#252526" Offset="1" />
            </LinearGradientBrush>
        </Grid.Background>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="53*"/>
            <ColumnDefinition Width="54*"/>
            <ColumnDefinition Width="53*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="91*"/>
            <RowDefinition Height="48*"/>
            <RowDefinition Height="140*"/>
            <RowDefinition Height="47*"/>
            <RowDefinition Height="124*"/>
        </Grid.RowDefinitions>

        <TextBox Style="{DynamicResource TextBoxStyleSearch}" x:Name="search" Background="#333333" BorderBrush="#3f3f46" BorderThickness="1" FontSize="16" Foreground="White" Margin="10,0,41,0" Padding="16,8,40,8" VerticalAlignment="Center" Height="38" />
        <fa:ImageAwesome IsHitTestVisible="False" Icon="Solid_Search" Foreground="LightGray" VerticalAlignment="Center" HorizontalAlignment="Left" Width="20" Height="20" Margin="200,0,0,0"/>
        <TextBlock IsHitTestVisible="False" FontSize="16" Foreground="Gray" Text="Пошук криптовлюти..." VerticalAlignment="Center" Margin="15,0,0,0" Height="22">
            <TextBlock.Style>
                <Style TargetType="{x:Type TextBlock}">
                    <Setter Property="Visibility" Value="Collapsed"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding Text, ElementName=search}" Value="">
                            <Setter Property="Visibility" Value="Visible"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </TextBlock.Style>
        </TextBlock>
        <TextBlock Style="{DynamicResource DefualtText}" Grid.Row="1" Grid.Column="0" Text="Обзор рынка" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10,0,0,0"/>

        <Border Grid.Row="2" Grid.Column="0" BorderBrush="#3f3f46" BorderThickness="1" Margin="10,10,10,10" CornerRadius="5">
            <Grid>
                <TextBlock IsHitTestVisible="True"  Style="{DynamicResource DefualtText}" FontWeight="SemiBold" Text="Bitcoin" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="15,10,0,0"/>
                <TextBlock IsHitTestVisible="True"  Foreground="Gray"  FontSize="14" Text="BTC" HorizontalAlignment="Left" VerticalAlignment="Top"  Margin="15,30,0,0"/>
                <oxy:PlotView Model="{Binding CryptoDiagram1}" Background="Transparent"/>
            </Grid>
        </Border>

        <Border Grid.Row="2" Grid.Column="1" BorderBrush="#3f3f46" BorderThickness="1" Margin="10,10,10,10" CornerRadius="5">
            <Grid>
                <TextBlock IsHitTestVisible="True" Style="{DynamicResource DefualtText}" FontWeight="SemiBold" Text="Bitcoin" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="15,10,0,0"/>
                <TextBlock IsHitTestVisible="True" Foreground="Gray"  FontSize="14" Text="BTC" HorizontalAlignment="Left" VerticalAlignment="Top"  Margin="15,30,0,0"/>
                <oxy:PlotView Model="{Binding CryptoDiagram2}" Background="Transparent"/>
            </Grid>
        </Border>
        <Border Grid.Row="2" Grid.Column="2" BorderBrush="#3f3f46" BorderThickness="1" Margin="10,10,10,10" CornerRadius="5">
            <Grid>
                <TextBlock IsHitTestVisible="True" Style="{DynamicResource DefualtText}" FontWeight="SemiBold" Text="Bitcoin" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="15,10,0,0"/>
                <TextBlock IsHitTestVisible="True" Foreground="Gray"  FontSize="14" Text="BTC" HorizontalAlignment="Left" VerticalAlignment="Top"  Margin="15,30,0,0"/>
                <oxy:PlotView Model="{Binding CryptoDiagram3}" Background="Transparent"/>
            </Grid>
        </Border>
        <TextBlock Grid.Row="3" Grid.Column="0" Text="Список криптовалют" Style="{DynamicResource DefualtText}" Margin="10,10,0,0"/>
        <ScrollViewer Grid.Row="4" Grid.ColumnSpan="3" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" CanContentScroll="True" BorderBrush="Transparent" Background="Transparent">
            <ListView Background="Transparent" BorderThickness="0" FontSize="16" FontWeight="Medium" Foreground="White" ItemsSource="{Binding ListCrypto}" BorderBrush="Transparent">
                <ListView.Resources>
                    <Style TargetType="{x:Type GridViewColumnHeader}">
                        <Setter Property="HorizontalContentAlignment" Value="Center"></Setter>
                        <Setter Property="Padding" Value="16,12"></Setter>
                        <Setter Property="Background" Value="Transparent"></Setter>
                        <Setter Property="Foreground" Value="White"></Setter>
                        <Setter Property="BorderBrush" Value="Transparent"></Setter>
                        <Setter Property="BorderThickness" Value="0"></Setter>
                    </Style>
                </ListView.Resources>
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="#" DisplayMemberBinding="{Binding  Rank}"></GridViewColumn>
                        <GridViewColumn Header="Название">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel>
                                        <TextBlock Text="{Binding Name}"/>
                                        <TextBlock Text="{Binding Symbol}" FontSize="12" Foreground="Gray"></TextBlock>
                                    </StackPanel>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Header="Цена" DisplayMemberBinding="{Binding PriceUsd,StringFormat='${0:0.##}'}"></GridViewColumn>
                        <GridViewColumn Header="24ч %">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding ChangePercent24Hr,StringFormat={}{0:0.##}%}" Foreground="{Binding ChangePercent24Hr,Converter={StaticResource PercentBrushConvector}}"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Header="Рыночная капитализация" DisplayMemberBinding="{Binding MarketCapUsd,Converter={StaticResource NumberToShort}}"></GridViewColumn>
                        <GridViewColumn Header="Объем (24ч)" DisplayMemberBinding="{Binding VolumeUsd24Hr,Converter={StaticResource NumberToShort}}"></GridViewColumn>
                        <GridViewColumn Header="Действия">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <!-- тут не зыбать команду и параметр-->
                                    <StackPanel>
                                        <Button Content="test" Command="{Binding DataContext.SelectCryptoCommand,RelativeSource={RelativeSource AncestorType=ListView}}" CommandParameter="{Binding Id}"></Button>
                                        <TextBlock Text="{Binding Id}" Foreground="White"/>
                                    </StackPanel>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                    </GridView>
                </ListView.View>
            </ListView>
        </ScrollViewer>
    </Grid>
</Page>
